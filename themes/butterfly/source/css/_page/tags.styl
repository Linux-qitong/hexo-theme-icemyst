.tag-cloud
  &-list
    a
      display: inline-block
      padding: 0 8px
      transition: all .3s
      border: 1px solid
      border-radius: 8px
      font-weight: 700
      margin: .3rem .6rem
      -webkit-text-stroke: 0.35px #bccbe4

      &:hover
        color: $text-hover !important
        transform: scale(1.1)

      +maxWidth768()
        zoom: .85

  &-title
    font-size: 2.57em

    +maxWidth768()
      font-size: 2em

h1.page-title
  & + .tag-cloud-list
    text-align: left
